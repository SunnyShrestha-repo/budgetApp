%h2 Login

= form_tag users_path, :method => :get do
    = label :users, :username, "Username"
    = text_field :users, :username
    
    = label :users, :password, "Password"
    = text_field :users, :password
    
    = submit_tag 'Submit'

#login
    - if @current_user
        %p.welcome  Welcome, #{@current_user.name}!
        = link_to 'Log Out', logout_path
    - else
        %p.login= link_to 'Log in with your Facebook account', '/auth/facebook'